<!-- Navbar for lg screens -->
<div class='static bg-stone-100 hidden lg:block'>
  <nav class='flex justify-between '>

    <!-- primary nav -->
    <div class='flex px-4 pb-3'>
      <!-- logo -->
      <div class='flex pt-3 pr-5 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300'> 
        <%= image_tag 'logo.svg', class:'pr-2'%>
        <%= link_to 'Café Brazil', store_index_path, class:'font-caveat items-center text-yellow-800  font-semibold text-4xl pb-1 shrink-0'%>
      </div>

      <!-- pages -->
      <div class='flex flex-row pt-4 text-xl tracking-tighter text-stone-400'>
        <a href='/about' class='px-3 pt-2 antialiased hover:text-red-700 hover:overline'>About</a>
        <a href='/contact' class='px-1 pt-2 antialiased hover:text-red-700 hover:overline'>Contact</a>
        <a href='/faq' class='px-3 pt-2 antialiased hover:text-red-700 hover:overline'>FAQ</a>
      </div>
    </div>

    <!-- secondary nav -->
    <div class=''>
      <!--login / signup / cart-->
      <div class='flex justify-end px-3 pb-1 pt-3'>
        <a href='/login' class='pt-3 mr-4 underline underline-offset-2 text-red-800 hover:text-amber-600 text-center'>Login</a>
        <a href='/signup' class='px-5 py-1 mt-2 mr-1 bg-red-800 bg-gradient-to-tr hover:from-red-800 hover:to-red-700 text-neutral-200 text-center rounded-lg hover:shadow transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-500'>Sign Up</a>
        <!-- cart button -->
        <button class='cart-btn active:bg-stone-200 rounded-xl drop-shadow-lg mt-1 px-2'>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- cart menu -->
  <div class='cart-display absolute hidden flex flex-row shrink-0 right-0 bg-stone-200 rounded-b-2xl rounded-tl-2xl px-8 py-8 mr-5 mt-1 mb-8' style='z-index:1'>
    <!-- shopping cart -->
    <div id='cart' class=''>
      <%= render @cart %>
    </div>
  </div>
</div>

<!-- Navbar for sm and md screens -->
<div class='static lg:hidden shrink-0 bg-stone-100 px-6 py-4 mx-auto'>
  <nav class='flex justify-between'>

    <!-- logo -->
    <div class='flex items-center transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-100 duration-300'>
      <%= image_tag 'logo.svg', class:'pr-2'%>
      <%= link_to 'Café Brazil', store_index_path, class:'font-caveat text-yellow-800 font-semibold text-3xl pb-1 mr-1 shrink-0'%>
    </div>

    <!-- Menu -->
    <div>
      <!-- Hamburger button -->
      <button class='mobile-menu-button active:bg-stone-200 rounded-xl drop-shadow-lg duration-300 p-2'>
        <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='w-7 h-7'>
          <path stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5' />
        </svg>
      </button>

      <!-- cart button -->
      <button class='mobile-cart-btn active:bg-stone-200 rounded-xl drop-shadow-lg p-2'>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-7 h-7">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
        </svg>
      </button>
    </div>
  </div>

  <!-- mobile menu -->
  <div class='mobile-menu hidden lg:hidden flex flex-col bg-stone-100 rounded-b-2xl pb-8 text-xl tracking-tighter text-stone-400 antialiased'>
    <a href='/about' class='block py-2 px-4 text-center hover:bg-stone-200'>About</a>
    <a href='/contact' class='block py-2 px-4 text-center hover:bg-stone-200'>Contact</a>
    <a href='/faq' class='block py-2 px-4 text-center hover:bg-stone-200'>FAQ</a>

    </br>

    <!--login / signup for small screens -->
    <div class='flex flex-col justify-center text-stone-400'>
      <a href='/login' class='pt-3 mr-4 underline underline-offset-2 text-red-800 hover:text-amber-600 text-center'>Login</a>
      <a href='/signup' class='px-5 py-1 mt-2 mx-8 bg-red-800 bg-gradient-to-tr hover:from-red-800 hover:to-red-700 text-neutral-200 text-center rounded-lg hover:shadow transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-100 duration-500'>Sign Up</a>
    </div>
  </div>

  <!-- cart menu -->
  <div class='mobile-cart-display absolute hidden lg:hidden flex flex-row shrink-0 right-0 bg-stone-200 rounded-b-2xl px-8 py-8 mr-5 mt-1 mb-8' style='z-index:1'>
    <!-- shopping cart -->
    <div id='cart' class=''>
      <%= render @cart %>
    </div>
  </div>
</nav>

<!-- Javascript code for cart display dropdown -->
<script>
  const btn_cart = document.querySelector('.cart-btn');
  const cart_display  = document.querySelector('.cart-display');

  btn_cart.addEventListener('click', () => {
    cart_display.classList.toggle('hidden');
  })
</script>

<!-- Javascript code for mobile cart and mobile dropdown menu -->
<script>
  const btn_mobile = document.querySelector('button.mobile-menu-button');
  const menu = document.querySelector('.mobile-menu');

  btn_mobile.addEventListener('click', () => {
    menu.classList.toggle('hidden');
  })
</script>