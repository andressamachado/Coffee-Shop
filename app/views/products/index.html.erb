<div class='w-full'>
  <% if notice.present? %>
    <p class='py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block' id='notice'><%= notice %></p>
  <% end %>

  <!-- page`s title -->
  <div>
    <h1 class='text-center tracking-tighter antialiased font-semibold text-6xl text-slate-900/75'> Registered Products </h1>

    <div class='pb-8'> 
      <p class='font-caveat text-center antialiased text-2xl text-slate-700/75'> Registered products currently for sale </p>
    </div>
  </div>
    
  </br>

  <table id='products' class='mx-auto'>
    <!-- button to add a new product -->
    <tfoot>
      <tr>
        <td colspan='3'>
          <div class='mt-8'>
            <%= link_to 'New product', new_product_path, class: 'rounded-lg py-3 px-5 bg-cyan-500 hover:bg-cyan-600 text-white block font-medium te' %>
          </div>
        </td>
      </tr>
    </tfoot>

    <!--products list -->
    <tbody>
      <% @products.each do |product| %>
        <tr class='<%= cycle('bg-stone-100', 'bg-white') %>'>
          <td class='px-8 py-3'>
            <%= image_tag(product.image_url, class: 'static object-contain shadow rounded-lg') %>
          </td>

          <td>
            <h1 class='text-xl font-semibold mb-3 mr-8'><%= product.title %></h1>
            <p> <%= truncate(strip_tags(product.description), length: 80) %> </p>
          </td>

          <td class='px-3'>
            <ul>
              <li> <%= link_to 'Show', product, class: 'hover:underline mr-8 pr-8' %> </li>
              <li> <%= link_to 'Edit', edit_product_path(product), class: 'hover:underline' %> </li>
              <li> <%= link_to 'Destroy', product, class: 'hover:underline' %> </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
