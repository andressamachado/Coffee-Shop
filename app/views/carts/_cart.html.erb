<div id='<%= dom_id cart %>'>
  <!-- page`s title -->
  <div>
    <h1 class='text-center tracking-tighter antialiased font-semibold text-6xl text-slate-900/75'> Your Shopping Cart </h1>

    <div class='pb-8'> 
      <p class='font-caveat text-center antialiased text-2xl text-slate-700/75'> Level up your in-home coffee experience </p>
    </div>
  </div>
    
  </br>

  <!-- cart products list -->
  <table class='table-auto mt-8'>
    <%= render cart.line_items %>

    <tfoot>
      <tr>
        <th class='text-right pt-5 border-t-2 border-black' colspan='3'>Total:</th>
        <td class='text-right pt-5 pl-3 font-bold border-t-2 border-black'>
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
